<Window x:Class="jigsaw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="window"
        xmlns:puzzle="clr-namespace:jigsaw"
        Title="Jigsaw" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="0" x:Name="dbView">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Table name"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Value}" Header="Size"/>
                    <GridViewColumn DisplayMemberBinding="{Binding RelationTo}" Header="Foreign Key"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Canvas Grid.Column="1" x:Name="canvas" Margin="54,54,0,0" Width="600" Height="600">
            <puzzle:Piece x:Name="table1" Color="Blue" X="100" Y="100" Width="200" Height="100"/>
            <puzzle:Piece x:Name="table2" Color="Yellow" X="150" Y="300" Width="100" Height="200"/>
            <puzzle:Piece x:Name="table3" Color="Red" X="300" Y="400" Width="300" Height="100"/>
        </Canvas>
    </Grid>
</Window>
