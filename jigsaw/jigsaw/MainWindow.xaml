<Window x:Class="jigsaw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:puzzle="clr-namespace:jigsaw"
        x:Name="window"
        Title="Jigsaw" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="0" x:Name="dbView">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Table name"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Value}" Header="Size"/>
                    <GridViewColumn DisplayMemberBinding="{Binding RelationTo}" Header="Foreign Key"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Canvas Grid.Column="1" x:Name="canvas" Margin="54,54,0,0" />
    </Grid>
</Window>
